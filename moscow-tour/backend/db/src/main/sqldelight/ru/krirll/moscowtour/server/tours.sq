selectAllTours:
    SELECT * FROM "tour_details" ORDER BY tour_id DESC;

selectToursBySearch:
    SELECT * FROM "tour_details" WHERE
        LOWER(title) LIKE LOWER('%' || :query || '%') OR
        LOWER(city_name) LIKE LOWER('%' || :query || '%') OR
        LOWER(country_name) LIKE LOWER('%' || :query || '%')
    ORDER BY tour_id;

selectTourById:
    SELECT * FROM "tour_details" WHERE tour_id = ?;

